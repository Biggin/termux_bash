# Based on Bridge by ScionicSpectre
# vim:set ts=2 sw=2 sts=2 ai et:
#
# This is the GTK+ 2 version of Adwaita. It's whole purpose is to look as the
# GTK+ 3 version as much as possible until GTK+ 2 dies completely.
#
# Note: comments for explaining styles are on the bottom of each file beside the
# widget matches.

# Declare the colours used throughout the theme.
# There shouldn't be any fiddling with them in the theme files themselves in
# order to not mess up the dark theme.

# Text/base
gtk-color-scheme = "text_color:#35E0FA\nbase_color:#030f16"
# Foreground/background
gtk-color-scheme = "fg_color:#2BB5C9\nbg_color:#0c3247"
# Active Text
gtk-color-scheme = "active_fg:#141414\nprelight_fg:#ffffff"
#Â Selected foreground/background
gtk-color-scheme = "selected_fg_color:#141414\nselected_bg_color:#8ad4d4"
# Insensitive foreground/background
gtk-color-scheme = "insensitive_fg_color:#208796\ninsensitive_bg_color:#082433"
# Menus
gtk-color-scheme = "menu_color:#051620"
# Links
gtk-color-scheme = "link_color:#35E0FA\nvisited_link_color:#208796"
# Treeview headers
gtk-color-scheme = "column_header_color:#2BB5C9\nhover_column_header_color:#35E0FA"
# Window decoration
gtk-color-scheme = "window_color:#0A293A"
# Tooltips
gtk-color-scheme = "tooltip_fg_color:#35E0FA\ntooltip_bg_color:#030f16"

# Set GTK settings
gtk-auto-mnemonics              = 1
gtk-primary-button-warps-slider = 1

# And hand over the control to the theme files
include "main.rc"
include "apps.rc"
include "hacks.rc"
include "xfce.rc"
